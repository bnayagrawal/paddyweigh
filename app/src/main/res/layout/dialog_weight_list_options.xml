<RelativeLayout
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/btnDialogViewBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_view_list_black_24dp"
        android:drawableTint="?attr/colorPrimary"
        android:textAlignment="viewStart"
        android:text="VIEW BILL"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/btnDialogDeleteList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_delete_black_24dp"
        android:drawableTint="?attr/colorPrimary"
        android:textAlignment="viewStart"
        android:layout_below="@+id/btnDialogViewBill"
        android:text="DELETE WEIGHT LIST"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>
</RelativeLayout>